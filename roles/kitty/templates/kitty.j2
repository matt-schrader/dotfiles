# Font
font_family      {{ font }}
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size        10.0

# Cursor
cursor_shape beam

# Padding
window_padding_width 5 10

# Scrollback
scrollback_lines 10000
touch_scroll_multiplier 5.0

# Bell
enable_audio_bell no

# Background
background #202020
background_opacity 0.9

# Generated with ansible jinja2 template
color0  {{ color0 }}
color8  {{ color8 }}
color1  {{ color1 }}
color9  {{ color9 }}
color2  {{ color2 }}
color10 {{ color10 }}
color3  {{ color3 }}
color11 {{ color11 }}
color4  {{ color4 }}
color12 {{ color12 }}
color5  {{ color5 }}
color13 {{ color13 }}
color6  {{ color6 }}
color14 {{ color14 }}
color7  {{ color7 }}
color15 {{ color15}}

# Mappings
map ctrl+Up   change_font_size current +1.0
map ctrl+Down change_font_size current -1.0

# URLs
open_url_modifiers ""
open_url_with default
